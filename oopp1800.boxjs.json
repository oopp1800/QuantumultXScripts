          "placeholder": "任务信息",
          "desc": ""
        },
        {
          "id": "qd_tasks_last_date",
          "name": "qd_tasks_last_date",
          "val": "",
          "type": "text",
          "placeholder": "任务最后更新日期",
          "desc": ""
        },
        {
          "id": "qd_timeout",
          "name": "间隔时间",
          "val": 20,
          "type": "number",
          "placeholder": "",
          "desc": "任务执行间隔时间，单位秒，默认间隔20s（防封号）"
        }
      ],
      "author": "@oopp1800",
      "repo": "https://github.com/oopp1800",
      "icons": [
        "https://raw.githubusercontent.com/chxm1023/Script_X/main/icon/qidian.png"
